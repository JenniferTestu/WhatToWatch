<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clipToPadding="false"
    android:outlineProvider="bounds"
    android:paddingLeft="20sp"
    android:paddingTop="10sp"
    android:paddingRight="20sp"
    android:paddingBottom="10sp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="2dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="610dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="520dp">

                <ImageView
                    android:id="@+id/affiche"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ScrollView
                    android:id="@+id/plus_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffff"
                    android:visibility="invisible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/affiche_miniature"
                                android:layout_width="wrap_content"
                                android:layout_height="200dp"
                                android:scaleType="centerCrop"
                                android:adjustViewBounds="true"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/info_titre"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center|left"
                                    android:paddingHorizontal="15sp"
                                    android:paddingTop="15sp"                                    android:text="Titre inconnu"
                                    android:textColor="@android:color/black"
                                    android:textSize="20sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/info_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center|left"
                                    android:paddingHorizontal="15sp"
                                    android:paddingTop="15sp"                                    android:text="Date inconnue"
                                    android:textColor="@android:color/black"
                                    />

                                <TextView
                                    android:id="@+id/info_categories"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center|left"
                                    android:paddingHorizontal="15sp"
                                    android:paddingTop="15sp"                                    android:text="Genres inconnus"
                                    android:textColor="@android:color/black"
                                    />

                                <TextView
                                    android:id="@+id/info_real"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="15sp"
                                    android:paddingTop="15sp"
                                    android:text="RÃ©alisateur inconnu"
                                    android:textColor="@android:color/black"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/text_streaming"
                            android:visibility="gone"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Streaming"
                            android:textColor="#fff"
                            android:background="@android:color/darker_gray"
                            />

                        <androidx.core.widget.NestedScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/streaming"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                android:orientation="horizontal">

                            </androidx.recyclerview.widget.RecyclerView>

                        </androidx.core.widget.NestedScrollView>

                        <TextView
                            android:id="@+id/text_location"
                            android:visibility="gone"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:textColor="#fff"
                            android:background="@android:color/darker_gray"
                            />

                        <androidx.core.widget.NestedScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

                            </androidx.recyclerview.widget.RecyclerView>

                        </androidx.core.widget.NestedScrollView>

                        <TextView
                            android:id="@+id/text_achat"
                            android:visibility="gone"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Achat"
                            android:textColor="#fff"
                            android:background="@android:color/darker_gray"
                            />

                        <androidx.core.widget.NestedScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/achat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

                            </androidx.recyclerview.widget.RecyclerView>

                        </androidx.core.widget.NestedScrollView>

                        <TextView
                            android:id="@+id/longue_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="15sp"
                            android:text="Description inconnue"
                            android:textColor="@android:color/black"
                            android:justificationMode="inter_word"/>

                    </LinearLayout>

                </ScrollView>



            </RelativeLayout>

            <LinearLayout
                android:id="@+id/offres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:gravity="center|left"
                android:textColor="@android:color/black"
                android:textSize="10sp"
                android:orientation="horizontal"
                android:scrollbars="horizontal"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/item_swipe_left_indicator"
            android:alpha="0"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_margin="70dp"
            android:src="@drawable/oui_stamp"
            android:rotation="-25">

        </ImageView>

        <ImageView
            android:id="@+id/item_swipe_right_indicator"
            android:alpha="0"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_margin="70dp"
            android:layout_gravity="right"
            android:src="@drawable/nope_stamp"
            android:rotation="25">
        </ImageView>

        <ImageView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10sp"
            android:src="@drawable/ic_info_white_24dp"/>



    </androidx.cardview.widget.CardView>


</LinearLayout>