<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center">

    <ImageButton
        android:id="@+id/bouton_wishlist"
        android:title="ToWatchList"
        android:layout_margin="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ace_of_hearts"
        android:background="@null"
        app:showAsAction="always"
        android:layout_gravity="center_horizontal|center"
        android:gravity="center"></ImageButton>

    <ImageButton
        android:id="@+id/recherche"
        android:title="Recherche"
        android:layout_margin="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
        android:src="@drawable/compagnion"
        android:background="@null"
        app:showAsAction="always"
        android:layout_gravity="center_horizontal|center"
        android:gravity="center"></ImageButton>

    <ImageButton
        android:id="@+id/deco"
        android:title="DÃ©connexion"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_exit_to_app_black_24dp"
        android:background="@null"
        app:showAsAction="always"
        android:layout_gravity="center_horizontal|center"
        android:gravity="center"></ImageButton>

    </LinearLayout>
    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>